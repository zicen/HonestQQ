<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.lizhenquan.honestqq.view.activity.ResetPwdActivity">
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="第一步：绑定邮箱"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/et_back"
        android:hint="请输入您的邮箱地址"
        android:id="@+id/et_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_selector"
        android:layout_width="match_parent"
        android:id="@+id/btn_bindemail"
        android:text="绑定"
        android:textColor="#fff"
        android:textSize="23sp"
        android:layout_height="wrap_content"/>
    <!--<EditText
        android:id="@+id/et_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入原始密码"/>

    <EditText
        android:hint="请输入新的密码"
        android:id="@+id/et_pwd_new1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="再次输入新的密码"
        android:id="@+id/et_pwd_new2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->
<TextView
    android:layout_width="match_parent"
    android:text="第二步：查看当前邮箱地址"
    android:textSize="20sp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_email_now"
        android:layout_width="match_parent"
        android:text="当前邮箱地址:"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_selector"
        android:layout_width="match_parent"
        android:id="@+id/btn_watchemail"
        android:text="查看当前邮箱地址"
        android:textColor="#fff"
        android:textSize="23sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="第三步：发送重置密码邮件"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_selector"
        android:layout_width="match_parent"
        android:id="@+id/btn_resetpwd"
        android:text="发送重置密码邮件"
        android:textColor="#fff"
        android:textSize="23sp"
        android:layout_height="wrap_content"/>

<TextView
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:text="因为环信的重置密码需要在后台服务器写好接口，所以这里并不能实际意义上的完成重置密码的功能。"
    android:layout_height="wrap_content"/>
</LinearLayout>
