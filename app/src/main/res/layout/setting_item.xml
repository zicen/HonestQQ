<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/setting_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="游戏"
            android:textColor="#000"
            android:textSize="20sp"/>
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_setting_user"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/avatar3"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_telephonenum"
            android:visibility="gone"
            android:text="188******83"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/fyc"/>

    </LinearLayout>
    <ImageView
        android:layout_below="@id/ll_setting_item"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>